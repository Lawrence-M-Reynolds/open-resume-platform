{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "ls -la / && ls -la .."
  },
  "deploy": {
    "startCommand": "java -Xmx512m -jar build/libs/app.jar",
    "healthcheckPath": "/actuator/health",
    "restartPolicyType": "ON_FAILURE"
  }
}